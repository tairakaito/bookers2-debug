<div class="body">
  <div class="container">
		<div class="row">
				<!--users一覧 -->
						<div class="col-xs-9">
						<table class="table">
							<% if @model == "user" %>
									<h2>Books index</h2>
									<!--books一覧 -->
										<thead>
											<tr>
												<th></th>
												<th>Title</th>
												<th>Opinion</th>
												<th colspan="3"></th>
											</tr>
										</thead>
										<tbody>
											<% @datas.each do |user| %>
											<tr>
												<td><%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img", fallback: "no_image.jpg" %></td>
												<td><%= user.name%></td>
												<th><%= user.introduction %></th>
											</tr>
											<% end %>
										</tbody>

								<% else @model == "book"%>
									<h2>UsersINDEX</h2>
									  	<thead>
											<tr>
												<th>image</th>
												<th>name</th>
												<th>introduction </th>
											</tr>
									  	</thead>

										<tbody>
											<% @datas.each do |book| %>
												<tr>
													<th><%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></th>
													 <th> <%= book.title %> </th>
													<th><%= book.body %></th>
												</tr>
											<% end %>
										</tbody>
								<% end %>
						</table>
					    </div>
		</div>
	</div>
</div>