<div class="body">
  <div class="container">
		<div class="row">

						<h2>FOLLOWE USER</h2>
				<!--users一覧 -->
						<div class="col-xs-9">
						<table class="table">
							<thead>
								<tr>
									<th>name</th>
									<th colspan="3"></th>
								</tr>
							</thead>

							<tbody>
								<% @users.each do |follower_user| %>
								<tr><td><%= follower_user.followed.name %></td>
									<td>フォロー数
									<%= follower_user.followed.follower.count %></td>

									<td>フォロワー数
									<%= follower_user.followed.followed.count %></td>
									<td><% if current_user != @user %>
										  <% if current_user.following?(@user) %>
										    <%= link_to "フォローを外す", user_relationships_path(@user.id), method: :delete, class: "" %>
										  <% else %>

										    <%= link_to "フォローする", user_relationships_path(@user.id),method: :POST, class: "" %>
										  <% end %>
										  <% end %></td>

									<td><%= link_to "Show", user_path(follower_user.followed.id), class: "user_#{@user.id}" %>

									</td>
								</tr>
								<% end %>
							</tbody>
						</table>
				<!--users一覧 -->
				</div>
		</div>
</div>
</div>